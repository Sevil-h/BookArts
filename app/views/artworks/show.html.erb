<div class="container justify-content-center">
  <div>
    <div class="art-info">
      <%= render 'carousel' %>
      <%# @artwork.photos.each do |photo| %>
        <%#= cl_image_tag photo.key, height: 500, width: 400, crop: :fill, class: "photo" %>
      <%# end %>
      <div class="art-info-description">
        <div class="name-card">
          <p>
          <span>
              <%= @artwork.name %>
            </span>
          &mdash; Owned by <%= @artwork.user.username %> &mdash;
          </p>
        </div>
        <p> Rate Â£ <%= @artwork.rate %>/month</p>
        <p>Address: <%= @artwork.address %></p>
        <p class="description"><%= @artwork.description %></p>
      </div>
    </div>
    <div class="d-flex m-1">
      <div class="reviews my-2">
        <h3>Reviews</h3>
        <% @artwork.reviews.each do |review| %>
          <div class="review-card">
            <div class="card-text">
              <p><strong><%= "#{review.booking.user.username}" %></strong></p>
              <div>
                <% counter = 0 %>
                <% 5.times do %>
                <i class="star-icon fa <%= review.rating > counter ? 'fa-star' : 'fa-star-o' %>"></i>
                  <% counter += 1 %>
                  <% end %>
              </div>
              <%= review.content %>
              </div>
            </div>
          <% end %>
        </div>
      <div class="booking-form m-3">
        <h3>Book this artwork</h3>
        <%= simple_form_for [@artwork, @booking] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.button :submit, class: 'button' %>
        <% end %>
      </div>
    </div>
    <%= link_to 'Back', artworks_path, class: 'button' %>
  </div>
</div>
