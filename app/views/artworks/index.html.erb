<div class="banner" class="justify-content-center">
  <h1>BookArts</h1>
</div>
<div class="container">
  <div class="cards">
    <% @artworks.each do |artwork| %>
    <div class="card m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('')">
    <%= link_to artwork.name, artwork_path(artwork) %>
    <p><span>Rate</span>
    <%= artwork.rate %></p>
    <%= link_to "Edit", artworks_path(@artwork) %>
    <%= link_to "Delete", artwork, method: :delete, data: {confirm: "Are you sure"} %>
<!--       <%= image_tag artwork.photo %>
 -->    </div>
    <% end %>
  </div>
</div>
