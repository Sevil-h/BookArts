<div class="confirm d-flex justify-content-center">
  <div class="accept">
    <%= simple_form_for(booking) do |f| %>
      <%= f.input :approval, input_html: { value: true }, as: :hidden%>
      <%= f.submit "Approve", class: 'booking-btn' %>
    <% end %>
  </div>
  <div class="decline">
    <%= simple_form_for(booking) do |f| %>
      <%= f.input :approval, input_html: { value: false }, as: :hidden %>
      <%= f.submit "Decline", class: 'booking-btn' %>
    <% end %>
  </div>
</div>
