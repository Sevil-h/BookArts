<%= render "artworks/navbar" %>
<p class="link-index"><%= link_to 'Back', artworks_path  %>
</p>
<div class="container">
  <div class="cards">
    <div class="text-center">
      <h1>My request</h1>
      <% @requests.each do |request| %>
        <div class="request-card m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url()">
          <p><span>Artwork</span>: <%= request.artwork.name %></p>
          <p><span>Owner</span>: <%= request.artwork.user.username %></p>
          <p><span>Â£ </span><%= request.artwork.rate %></p>
          <p><%= image_tag request.artwork.photo %></p>
          <p class="text-center">Booking Time</p>
          <p><%= request.start_date %>
          <span> - <%= request.end_date %></span></p>
          <% if request.approval %>
            <p> Confirm! </p>
          <% else %>
            <p> Pending</p>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <h1>Bookings</h1>
      <% @my_bookings.each do |booking| %>
        <div class="booking-card m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url()">
          <p><span>Artwork</span>: <%= booking.artwork.name %></p>
          <p><span>Owner</span>: <%= booking.artwork.user.username %></p>
          <p><%= image_tag booking.artwork.photo %></p>
          <p class= "text-center">Booking Time</p>
          <p><%= booking.start_date%>
          <span> - <%= booking.end_date%></span></p>
          <% if booking.approval %>
            <p> Confirm! </p>
          <% else %>
            <p> Pending</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

